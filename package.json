{
  "name": "digistore24-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for Digistore24 API - enables AI assistants to interact with Digistore24 e-commerce platform",
  "keywords": [
    "mcp",
    "digistore24",
    "ai",
    "ecommerce",
    "api",
    "model-context-protocol"
  ],
  "author": "Digistore24",
  "homepage": "https://github.com/digistore24/digistore24-mcp-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/digistore24/digistore24-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/digistore24/digistore24-mcp-server/issues"
  },
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "digistore24-mcp": "build/index.js"
  },
  "files": [
    "build",
    "src",
    "docs",
    "public",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc && chmod 755 build/index.js",
    "typecheck": "tsc --noEmit",
    "prestart": "npm run build",
    "start:http": "node build/index.js --transport=streamable-http",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@modelcontextprotocol/sdk": "^1.10.0",
    "axios": "^1.11.0",
    "dotenv": "^16.4.5",
    "fetch-to-node": "^2.1.0",
    "hono": "^4.7.7",
    "json-schema-to-zod": "^2.6.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.2",
    "@types/uuid": "^10.0.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.8.3"
  }
}
